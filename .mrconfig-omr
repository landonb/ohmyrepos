include = cat "${OHMYREPOS_LIB:-${HOME}/.ohmyrepos/lib}/link-private-exclude"
include = cat "${OHMYREPOS_LIB:-${HOME}/.ohmyrepos/lib}/link-private-ignore"
include = cat "${OHMYREPOS_LIB:-${HOME}/.ohmyrepos/lib}/no-travel"
